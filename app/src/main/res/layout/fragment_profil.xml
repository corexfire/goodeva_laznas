<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bristol.laznas.ProfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/colorLightGrey"
            android:orientation="vertical"
            android:layout_marginBottom="20dp"
            android:padding="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/fotoPengguna"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/profil_fix"
                android:backgroundTint="@color/colorPrimaryGreen"
                app:civ_border_width="2dp"
                app:civ_fill_color="@color/colorPrimaryGreen"
                app:civ_border_color="@color/colorPrimaryGreen"/>

            <!--<ImageView-->
                <!--android:id="@+id/fotoPengguna"-->
                <!--android:layout_width="80dp"-->
                <!--android:layout_height="80dp"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:tint="@color/putih"-->
                <!--android:src="@drawable/ic_profil_icon" />-->

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fotoPengguna"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/namaPengguna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"

                    android:textStyle="bold"
                    android:text="Name"
                    android:textSize="20dp" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/Role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"


                    android:text="Role"
                    android:layout_below="@id/namaPengguna"
                    android:textSize="15dp" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/Phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"


                    android:text="Phone Number"
                    android:layout_below="@id/Role"
                    android:textSize="15dp" />
                <!--
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/namaPengguna"
                    android:layout_centerHorizontal="true"
                    android:background="@color/abuabusedang"
                    android:onClick="toEditProfil"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="Ubah Profil"
                    android:textSize="10dp" />-->
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom_textfield_daftar"

                android:paddingBottom="15dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="15dp"
                android:tag="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/donasi" />

                    <TextView
                        android:id="@+id/tv_riwayat_donasi"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:text="Riwayat Donasi"
                        android:textColor="@color/hitam" />
                </LinearLayout>
            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom_textfield_daftar"

                android:paddingBottom="15dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="15dp"
                android:tag="0">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/galang"
                    android:backgroundTint="@color/colorPrimaryGreen"
                    app:civ_border_width="2dp"
                    app:civ_fill_color="@color/colorPrimaryGreen"
                    app:civ_border_color="@color/colorPrimaryGreen"/>

                <!--<ImageView-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:src="@drawable/galang_dana" />-->

                <TextView
                    android:id="@+id/tv_riwayat_galang_dana"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:text="Riwayat Galang Dana"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryGreen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom_textfield_daftar"
                android:paddingBottom="15dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/riwayat_trans"
                    android:backgroundTint="@color/colorPrimaryGreen"
                    app:civ_border_width="2dp"
                    app:civ_fill_color="@color/colorPrimaryGreen"
                    app:civ_border_color="@color/colorPrimaryGreen"/>

                <!--<ImageView-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:src="@drawable/transaksi" />-->

                <TextView
                    android:id="@+id/tv_riwayat_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:text="Riwayat Transaksi"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryGreen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom_textfield_daftar"
                android:paddingBottom="15dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/chat"
                    android:backgroundTint="@color/colorPrimaryGreen"
                    app:civ_border_width="2dp"
                    app:civ_fill_color="@color/colorPrimaryGreen"
                    app:civ_border_color="@color/colorPrimaryGreen"/>

                <!--<ImageView-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:src="@drawable/whatsapp" />-->

                <TextView
                    android:id="@+id/tv_chat_with_ustadz"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:text="Chat dengan Ustadz"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryGreen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_bottom_textfield_daftar"
                android:paddingBottom="15dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:paddingTop="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logout2"
                    app:civ_border_overlay="true"
                    android:backgroundTint="@color/colorPrimaryGreen"
                    app:civ_border_width="2dp"

                    app:civ_fill_color="@color/colorPrimaryGreen"
                    app:civ_border_color="@color/colorPrimaryGreen"/>

                <!--<ImageView-->
                    <!--android:layout_width="30dp"-->
                    <!--android:layout_height="30dp"-->
                    <!--android:src="@drawable/logout" />-->

                <TextView
                    android:id="@+id/tv_logout"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:text="Log out"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryGreen" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView>