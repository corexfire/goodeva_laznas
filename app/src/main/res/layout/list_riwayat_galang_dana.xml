<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/fotoAcara"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:src="@drawable/laznas" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">
            <TextView
                android:id="@+id/namaAcara"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:maxLines="2"
                android:textSize="15dp"
                android:text="Seminar Google Design Sprint Pada UI Entrepreneurship yang sangat panjang durasinya"
                android:layout_marginBottom="5dp"
                android:textColor="@color/hitam"/>
            <TextView
                android:id="@+id/deskripsiAcara"
                android:layout_below="@id/namaAcara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textSize="12dp"
                android:text="Design Sprint merupakan metodologi pengembangan produk teknologi yang dikembangkan oleh Google sejak 2012."/>
            <RelativeLayout
                android:id="@+id/detailAcara"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/deskripsiAcara">

                <RelativeLayout
                    android:id="@+id/jumlahDonasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/harga_icon"
                        android:id="@+id/iconHarga"/>
                    <TextView
                        android:layout_toRightOf="@id/iconHarga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gratis"
                        android:textSize="10dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/hargaAcara"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/status_icon"
                        android:id="@+id/iconHarga"/>
                    <TextView
                        android:layout_toRightOf="@id/iconHarga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textSize="10dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/statusGalangDana"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/tanggalAcara"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/jumlahDonasi"

                    android:paddingBottom="10dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/waktu_icon"
                        android:id="@+id/iconWaktu"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <TextView
                        android:layout_toRightOf="@id/iconWaktu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24 Sept 2016"
                        android:textSize="10dp"
                        android:paddingLeft="5dp"
                        android:id="@+id/waktuAcara"/>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>