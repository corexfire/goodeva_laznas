<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PanduanDetailActivity">

    <include layout="@layout/back_toolbar"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/panduan"
        android:padding="30dp"
        android:background="@drawable/shape1"
        />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TITLE"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorGrey"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/txt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorGrey"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text=" Pada dasarnya, Allah SWT mewajibkan berpuasa kepada semua kaum muslimin dibulan Ramadhan bagi mereka yang sehat dan memberikan keringanan kepada mereka berupa fidyah yakni dengan memberi makan orang miskin. \n\n Fidyah diberikan sesuai dengan jumlah hari dia meninggalkan puasa, yakni setara dengan memberi makan semalam untuk satu orang miskin. \n\n
            Orang yang harus membayar fidyah, karena tidak berpuasa : \n
            1. Orang Sakit \n
            2. Orang Tua \n
            3. Ibu Hamil atau menyusui"
            android:textSize="10sp"
            />

    </ScrollView>



</LinearLayout>